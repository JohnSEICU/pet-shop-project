const mysql = require("mysql2");
require('dotenv').config();

const db = mysql.createPool({
    host: process.env.db_host || "localhost", // ← change to your host if needed
    user: process.env.db_user || "root",
    password: process.env.db_password || "Popescu.99!john",     // ← add your MySQL password if you have one
    database: process.env.db_name || "pricopi_robert_alexandru_341b1", // ← change to the name of your database
    waitForConnections: true,
    connectionLimit: 10
});

// Wrapper pentru a pastra compatibilitatea cu codul existent care foloseste db.query
// Pool-ul are metoda .query, deci restul fisierelor vor functiona fara modificari!
db.getConnection((err, connection) => {
    if (err) {
        console.error('Eroare la conectarea la MySQL:', err);
    } else {
        console.log('Conectat la MySQL (Pool activ).');
        connection.release();
    }
});

module.exports = db;