const express = require('express');
const router = express.Router();
const db = require('../config/db');

// Login
router.post('/login', (req, res) => {
    const { username, password } = req.body;
    // Atentie: Coloanele sunt PascalCase acum (Username, Password)
    const sql = 'SELECT * FROM Users WHERE Username = ? AND Password = ?';
    db.query(sql, [username, password], (err, results) => {
        if (err) return res.status(500).json({ error: err.message });
        
        if (results.length > 0) {
            const user = results[0];
            // Fetch CustomerID if exists
            db.query('SELECT CustomerID FROM Customers WHERE UserID = ?', [user.UserID], (err, custRes) => {
                const customerId = custRes.length > 0 ? custRes[0].CustomerID : null;
                res.json({ success: true, user: { ...user, CustomerID: customerId } });
            });
        } else {
            res.status(401).json({ success: false, message: 'Invalid login' });
        }
    });
});

module.exports = router;